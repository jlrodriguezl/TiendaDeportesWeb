
@{
    ViewBag.Title = "Login";
}
<br />
<form autocomplete="off" method="get" id="frmLogin" accept-charset="UTF-8">
    <div class="form-group">
        <label for="user">Usuario: </label>
        <input type="text" class="form-control" id="user" name="user" aria-describedby="emailHelp" placeholder="Ingrese Usuario">
        
    </div>
    <div class="form-group">
        <label for="pwd">Password</label>
        <input type="password" class="form-control" id="pwd" name="pwd" placeholder="Password">
    </div>    
    <button type="submit" class="btn btn-primary">Ingresar</button>
</form>

@section  scripts
{
    <script>
        $(document).ready(function () {
            $('#frmLogin').submit(function (e) {
                e.preventDefault();
                url = "@Url.Content("~/Login/Enter")";
                parametros = $(this).serialize();
                $.post(url, parametros, function (data) {
                    if (data == "1") {
                        document.location.href = "@Url.Content("~/")";
                    } else {
                        alert(data);
                    }
                })
            });
        });
    </script>
}

