@model TiendaDeportesWeb.Models.DTOs.CheckOutDTO
@{
    ViewBag.Title = "View";
}

<h2>CARRITO</h2>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
           
                <tr>
                    <th>ID DE LA VENTA</th>
                    <th>FECHA DE LA VENTA</th>
                    <th>VALOR DEL IVA</th>
                    <th>IDENTIFICACIÓN DE LA PERSONA</th>
                    <th>TIPO DE PERSONA</th>
                    <th>ESTADO DE LA VENTA</th>
                </tr>
           

            
                <tr>
                    <td style="text-align: center">@Model.carrito.venta.ID_VENTA</td>
                    <td style="text-align: center">@Model.carrito.venta.FECHA_VENTA</td>
                    <td style="text-align: center">@Model.carrito.venta.VLR_IVA</td>
                    <td style="text-align: center">@Model.carrito.venta.ID_PERSONA</td>
                    <td style="text-align: center">@Model.carrito.venta.TIPO_PERSONA</td>
                    <td style="text-align: center">@Model.carrito.venta.ESTADO_VENTA</td>
                </tr>
            
        </table>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            
                <tr>
                    <th>PRODUCTO</th>
                    <th>PRECIO VENTA</th>
                    <th>UNIDADES</th>
                </tr>
   

           
                
                @foreach (var vp in Model.carrito.LstVentaProductos)
                 { 
             <tr>
                    
                    <td>@vp.ID_PRODUCTO</td>
                    <td>@vp.PRECIO_VENTA</td>
                    <td>@vp.CANTIDAD</td>
                    

             </tr>
                 }
           


        </table>
    </div>
</div>