@model TiendaDeportesWeb.Models.DTOs.DominiosDTO
@{
    ViewBag.Title = "Gestionar Dominios";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">

        @using (Html.BeginForm("Add", "Dominios", FormMethod.Post, new { role = "form" }))
        {
            @Html.LabelFor(d => d.TIPO_DOMINIO)
            @Html.TextBoxFor(d => d.TIPO_DOMINIO, new { @class = "form-control" })
            @Html.ValidationMessage("Tipo de Domino", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(d => d.ID_DOMINIO)
            @Html.TextBoxFor(d => d.ID_DOMINIO, new { @class = "form-control" })
            @Html.ValidationMessage("Id Dominio", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(d => d.VLR_DOMINIO)
            @Html.TextBoxFor(d => d.VLR_DOMINIO, new { @class = "form-control" })
            @Html.ValidationMessage("Valor del Dominio", new { @class = "text-danger" })
            <br />


            <div style="text-align: left">
                <br />
                <input type="submit" class="btn btn-success" value="Guardar" />
            </div>

        }

    </div>
</div>

